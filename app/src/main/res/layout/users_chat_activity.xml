<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InApp.UsersChat"
    android:background="@drawable/chat_background"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/editTextLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="60dp"
    android:background="@drawable/button_round"
    android:backgroundTint="#8C8888"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lineReplayLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/chat_message_bg"
        android:backgroundTint="#3AA63F"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lineReplayLinearText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="40dp"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:background="@drawable/chat_message_bg"
            android:backgroundTint="#388E3C"/>

       <ImageView
            android:id="@+id/closeReplayLayout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="7.5dp"
            android:src="@drawable/baseline_close_24"
            android:background="#3AA63F"/>
    </LinearLayout>


        <EditText
            android:id="@+id/messageLine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_round"
            android:backgroundTint="#B28C8888"
            android:drawableTint="#FFFFFF"
            android:hint="  Write your message here..."
            android:layout_marginStart="50dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

</LinearLayout>


    <ImageView
        android:id="@+id/speechToTextBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_mic_24"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/sendBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_send_24"
        android:background="@drawable/user_circle"
        app:tint="#FFFFFF"
        />


    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editTextLayout"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0B1C24"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/backToHomeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#353839"
            android:background="@drawable/user_circle"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/baseline_home_24"
            app:tint="#FFFFFF" />


        <ImageButton
            android:id="@+id/refreshBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#353839"
            android:background="@drawable/user_circle"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/baseline_refresh_24"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/usresChatUsersLink"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:text="Users Chat"
            android:fontFamily="@font/baloo_bhai"
            android:textSize="26dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/your_ultimate_assistant_logo"
            app:tint="@color/white" />

    </LinearLayout>

</RelativeLayout>

