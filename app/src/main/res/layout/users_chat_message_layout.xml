<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">



    <LinearLayout
        android:id="@+id/myMessageLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:background="@drawable/chat_message_bg"
            android:backgroundTint="#3AA63F"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/baloo_bhai"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:id="@+id/replayLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/chat_message_bg"
            android:backgroundTint="#3AA63F"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/replayLinearText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:text="name"
                android:textSize="14dp"
                android:background="@drawable/chat_message_bg"
                android:backgroundTint="#388E3C"
                />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/myLittleMessageLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:background="@drawable/chat_message_bg"
            android:backgroundTint="#3AA63F">

            <TextView
                android:id="@+id/myMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="10dp"
                android:text="Hello, this is a chat message."
                android:textColor="@android:color/white"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"/>


            <TextView
                android:id="@+id/myTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="10:00"
                android:textAlignment="textStart"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>




        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/otherPeopleMessageLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_message_bg"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:id="@+id/otherSenderNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="name"
            android:textColor="#0288D1"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:fontFamily="@font/baloo_bhai"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <LinearLayout
        android:id="@+id/otherReplayLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/chat_message_bg"
        android:backgroundTint="#C9DEE3DE"
        android:visibility="gone"
        >
            <TextView
                android:id="@+id/otherReplayLinearText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="#000000"
                android:textSize="14dp"
                android:background="@drawable/chat_message_bg"
                android:backgroundTint="#ABD8D8D8"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherLittleMessageLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:background="@drawable/chat_message_bg"
            android:backgroundTint="#FFFFFF">


            <TextView
                android:id="@+id/otherPeopleMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="10dp"
                android:text="Hello, this is a chat message."
                android:textColor="@android:color/black"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/otherTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="10:00"
                android:textAlignment="textEnd"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>